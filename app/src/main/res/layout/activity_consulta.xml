<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPaises1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spPaises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCiudades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona:"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spCiudades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPoblacion"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Población del país seleccionado:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPoblacionResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCiudad"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Ciudad:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCiudadResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPorcentaje"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="% de la población de la ciudad: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPorcentajeResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHabitantes"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Habitantes: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvHabitantesresultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMonumentos"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Monumentos:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMonumentosResultado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>